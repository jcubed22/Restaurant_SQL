<html>
    <head>
        <title>{{cuisine.getType()}}</title>
    </head>
    <body>
        <h1>{{cuisine.getType()}}</h1>

        {% if venues is not empty %}
            <ul>
                {% for venue in venues %}
                    <li><b>{{ venue.getName }}</b></li>
                        <ul>
                            <li>Rating: {{ venue.getRating }}</li>
                            <li>{{ venue.getDescription }}</li>
                            <li>{{ venue.getAddress }}</li>
                        </ul>
                    <!-- <form action="/cuisine/{id}" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit">Delete this venue</button>
                    </form> -->
                {% endfor %}
            </ul>
        {% endif %}

        <form action="/venues" method="post">
            <input type="hidden" id="cuisine_id" name="cuisine_id" value="{{ cuisine.getId() }}">

            <label for="name">Venue Name</label>
            <input type="text" name="name" id="name">

            <label for="rating">Rating</label>
            <select name="rating">
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
            </select>

            <label for="description">Description</label>
            <input type="text" name="description" id="description">

            <label for="address">Address</label>
            <input type="text" name="address" id="address">

            <button type="submit">Add Venue</button>
        </form>
        <form action ="/delete_venues" method="post">
            <button type="submit">Delete Venues</button>
        <p><a href="/">Home</a></p>
    </body>
</html>
