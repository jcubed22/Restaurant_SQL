<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <title>{{ cuisine.getType }}</title>
    </head>
    <body>
        <div class="container">
            <h1>{{ cuisine.getType }}</h1>

            {% if venues is not empty %}
                <h3>Here are the venues that serve {{ cuisine.getType }} food:</h3>
                    {% for venue in venues %}
                        <li><h5><b><a href="/venues/{{ venue.getId }}">{{ venue.getName }}</a></b></h5></li>
                    {% endfor %}
            {% else %}
                <h3> Sorry, there are no venues currently listed for {{ cuisine.getType }}.  Why don't you add some?</h3>
            {% endif %}

                <form action="/form_restaurant">
                    <form action="/form_cuisine">
                        <input type="hidden" id="cuisine_id" name="cuisine_id" value="{{ cuisine.getId() }}">
                        <button type="submit" class="btn btn-info">Add a new venue</button>
                    </form>

                {% if form_check == true %}
                    <form action="/add_venue" method="post">
                        <input id="cuisine_id" name="cuisine_id" type="hidden" value="{{ cuisine.getId() }}">
                        <h3>Enter some information about the venue</h3>
                        <div class="form-group">
                            <label for="name">Venue Name</label>
                            <input class="form-control" type="text" name="name" id="name">
                        </div>
                        <div class="form-group">
                          <label for="sel1">Rating:</label>
                          <select class="form-control" id="rating" name="rating">
                            <option value=1>1</option>
                            <option value=2>2</option>
                            <option value=3>3</option>
                            <option value=4>4</option>
                            <option value=5>5</option>
                          </select>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input class="form-control" type="text" name="description" id="description">
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input class="form-control" type="text" name="address" id="address">
                        </div>
                        <button type="submit" class="btn btn-success">Add Venue</button>
                    </form>

            {% endif %}
                <br>
                <br>
                <form action="/">
                    <button type="submit" class="btn btn-primary">Home</button>
                </form>
            </form>
        </div>
    </body>
</html>
